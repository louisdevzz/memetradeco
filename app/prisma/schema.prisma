generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String
  description       String?
  ticker            String
  address           String
  curveAddress      String
  owner             String
  systemType        String?
  imageUrl          String?
  agentLore         String?  @db.Text
  personality       String?  @db.Text
  communicationStyle String?
  knowledgeAreas    String?  @db.Text
  tools             String[] @default([])
  examples          String?  @db.Text
  twitterUsername   String?
  twitterEmail      String?
  twitterPassword   String?  @db.Text
  metrics          AgentMetrics?
}

model AgentMetrics {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  agentId         String   @unique
  agent           Agent    @relation(fields: [agentId], references: [id])
  
  // Liquidity metrics
  liquidityAmount Float
  liquidityValue  Float
  
  // Holdings and holders
  blueChipHolding Float
  holdersCount    Int
  holdersChange24h Int
  
  // Smart money metrics
  smartMoneyValue Float
  smartMoneyKol   Int
  
  // Transaction metrics
  totalTransactions Int
  buyTransactions  Int
  sellTransactions Int
  
  // Volume metrics
  volumeLastHour  Float
  totalVolume     Float
  
  // Price metrics
  currentPrice    Float
  priceChange1m   Float
  
  // Market metrics
  marketCap       Float
  
  // Social metrics
  followersCount  Int
  topTweetsCount Int

  @@index([agentId])
}
