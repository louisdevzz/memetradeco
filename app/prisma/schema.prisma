generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String
  description       String?
  ticker            String
  address           String
  curveAddress      String
  owner             String
  systemType        String?
  imageUrl          String?
  agentLore         String?  @db.Text
  personality       String?  @db.Text
  communicationStyle String?
  knowledgeAreas    String?  @db.Text
  tools             String[] @default([])
  examples          String?  @db.Text
  twitterUsername   String?
  twitterEmail      String?
  twitterPassword   String?  @db.Text
}
